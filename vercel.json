{
  "version": 2,
  "buildCommand": "cd phonebook_frontend && npm install && npm run build && mkdir -p ../phonebook_backend/public && cp -r dist/* ../phonebook_backend/public/",
  "installCommand": "cd phonebook_backend && npm install",
  "builds": [
    {
      "src": "phonebook_backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "phonebook_backend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "phonebook_backend/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "phonebook_backend/public/assets/$1"
    },
    {
      "src": "/vite.svg",
      "dest": "phonebook_backend/public/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "phonebook_backend/public/index.html"
    }
  ]
}