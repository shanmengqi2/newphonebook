{
  "version": 2,
  "buildCommand": "cd phonebook_frontend && npm install && npm run build && cd ../phonebook_backend && npm install && mkdir -p public && cp -r ../phonebook_frontend/dist/* public/",
  "installCommand": "echo 'Dependencies installed in buildCommand'",
  "builds": [
    {
      "src": "phonebook_backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "phonebook_backend/index.js"
    },
    {
      "src": "/info",
      "dest": "phonebook_backend/index.js"
    },
    {
      "src": "/((?!api).*)",
      "dest": "/phonebook_backend/public/$1"
    },
    {
      "src": "/",
      "dest": "/phonebook_backend/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/phonebook_backend/public/index.html"
    }
  ]
}